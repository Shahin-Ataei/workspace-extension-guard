{
  "name": "workspace-extension-guard",
  "displayName": "Workspace Extension Guard",
  "description": "Strictly manages and syncs active extensions per workspace using version locking and snapshots.",
  "version": "1.0.0",
  "publisher": "eighty",
  "icon": "icon.svg",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "extension manager",
    "workspace settings",
    "sync extensions",
    "profile manager",
    "team development"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extGuard.exportSnapshot",
        "title": "Extension Guard: Export Current State",
        "category": "Extension Guard"
      },
      {
        "command": "extGuard.syncNow",
        "title": "Extension Guard: Sync Extensions Now",
        "category": "Extension Guard"
      }
    ],
    "configuration": {
      "title": "Extension Guard",
      "properties": {
        "extGuard.globalIgnoredExtensions": {
          "type": "array",
          "default": [],
          "description": "List of extension IDs to ignore during sync (e.g., personal themes, keymaps)."
        },
        "extGuard.cliCommand": {
          "type": "string",
          "default": "auto",
          "description": "The CLI command to run VS Code (code, code-insiders, etc.)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "echo 'No compilation needed for JS'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/"
    
  },
  "license": "MIT"
}